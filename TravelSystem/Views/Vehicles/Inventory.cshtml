@section Scripts{
<script>
       
        $(document).ready(function () {
            var Checked = [];
            $("#inventory").load('/Vehicles/InventoryGrid');
            $(".FilterCheck").change(function () {
                if ($(this).prop("checked")) {
                    Checked.push(parseInt($(this).val()));
                }
                else {
                    var index = Checked.indexOf(parseInt($(this).val()));
                    if (index !== -1) {
                        Checked.splice(index, 1);
                    }
                }
                loadInventory();
            });
            $(".slider-snap").change(function () {
                loadInventory();
            });
            function loadInventory() {
                var fromPrice = $(".slider-snap-value-lower").html();
                var toPrice = $(".slider-snap-value-upper").html();
                var vehicleIds = Checked.join(",");
                $("#inventory").load('/Vehicles/InventoryGrid?vehicleIds=' + vehicleIds + "&fromPrice=" + fromPrice + "&toPrice=" + toPrice);
            }
            
        });
     
    </script>

}
