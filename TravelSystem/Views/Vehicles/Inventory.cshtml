@{
    ViewData["Title"] = "Inventory";
}
<!--=== Content Part ===-->
<div class="content container">
    <div class="row">
        <div class="col-md-3 filter-by-block md-margin-bottom-60">
            <h1>Filter By</h1>

            <div class="panel-group" id="accordion-v2">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion-v2" href="#collapseTwo">
                                Types
                                <i class="fa fa-angle-down"></i>
                            </a>
                        </h2>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <ul class="list-unstyled checkbox-list">
                                @foreach (var item in TempData["VehicleTypes"] as IEnumerable<TravelSystem.Models.VehicleTypes>)
                                {
                                    <li>
                                        <label class="checkbox">
                                            <input type="checkbox" name="checkbox" value="@item.Id" class="FilterCheck" />
                                            <i></i>
                                            @item.VehicleTypeName
                                        </label>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div><!--/end panel group-->
            <div class="panel-group" id="accordion-v4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion-v4" href="#collapseFour">
                                Price
                                <i class="fa fa-angle-down"></i>
                            </a>
                        </h2>
                    </div>
                    <div id="collapseFour" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <div class="slider-snap"></div>
                            <p class="slider-snap-text">
                                <span class="slider-snap-value-lower" id="LowerHandle"></span>
                                <span class="slider-snap-value-upper" id="HigherHandle"></span>
                            </p>
                        </div>
                    </div>
                </div>
            </div><!--/end panel group-->
        </div>
        <div class="col-md-9">
            <div class="row margin-bottom-5">
                <div class="col-sm-4 result-category">
                    <h2>Car For You</h2>
                    @*<small class="shop-bg-green badge-results"></small>*@
                </div>
                <div class="col-sm-8">
                    <ul class="list-inline clear-both">
                            <li class="sort-list-btn">
                                <h3>Search :</h3>
                                <input type="text" id="searchText" value="@ViewBag.SearchText" class="form-control" style="width:70%"/>
                            </li>
                        </ul>
                </div>
            </div><!--/end result category-->
            <div class="filter-results" id="inventory">

            </div><!--/end filter resilts-->
            @*<div class="text-center">
                    <ul class="pagination pagination-v2">
                        <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
                        <li><a href="#">1</a></li>
                        <li class="active"><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </div>*@<!--/end pagination-->
        </div>
    </div><!--/end row-->
</div><!--/end container-->
<!--=== End Content Part ===-->

@section Scripts{
<script>
       
        $(document).ready(function () {
            var Checked = [];
            $("#inventory").load('/Vehicles/InventoryGrid?searchText=' + $("#searchText").val());
            $(".FilterCheck").change(function () {
                if ($(this).prop("checked")) {
                    Checked.push(parseInt($(this).val()));
                }
                else {
                    var index = Checked.indexOf(parseInt($(this).val()));
                    if (index !== -1) {
                        Checked.splice(index, 1);
                    }
                }
                loadInventory();
            });
            $(".slider-snap").change(function () {
                loadInventory();
            });
            $(document).on("keydown","#searchText",function () {
                loadInventory();
            });
            function loadInventory() {
                var searchText = $("#searchText").val();
                var fromPrice = $(".slider-snap-value-lower").html();
                var toPrice = $(".slider-snap-value-upper").html();
                var vehicleIds = Checked.join(",");
                $("#inventory").load('/Vehicles/InventoryGrid?vehicleIds=' + vehicleIds + "&fromPrice=" + fromPrice + "&toPrice=" + toPrice + "&searchText=" + searchText);
            }
            
        });
     
    </script>

}
