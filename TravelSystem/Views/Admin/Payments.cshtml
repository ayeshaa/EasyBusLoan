@{ 
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card mb-3">
                <div class="card-header">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <h3 class="card-header-text">Payments</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body listPadding">
                    <div id="grid"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="PopupWarning" style="display: none;">
    <table>
        <tr>
            <td>
                <p>Do you want to delete?</p>
                <br />
            </td>
        </tr>
        <tr>
            <td style="text-align: center">
                <button class="k-button k-primary" id="btnYes">Yes</button>
                <button class="k-button k-primary" id="btnNo">No</button>
            </td>
        </tr>
    </table>
</div>
<script type="text/javascript">
  
    $(document).ready(function () {
     $("#grid").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: "@Url.Action("GetAllPayments", "Admin")"
                    },
                    pageSize: 20
                },
                height: 550,
                sortable: true,
                filterable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                columns: [
                    {
                        field: "Id",
                        title: "#",
                        width:150
                    },
                    {
                        template: "<span class='btn btn-link' >#: VehicleTypeName # </span>",
                    field: "VehicleTypeName",
                        title: "Vehicle Name"
                    },
                    {
                        template: "#= kendo.toString(kendo.parseDate(CreatedDate),  'dd-MMM-yyyy hh:mm tt') #",
                        field: "CreatedDate",
                        title: "Buy Date",
                    },
                    {
                        field: "StripeCustomerId",
                        title: "Stripe Customer"
                    },
                    {
                        field: "SalesPrice",
                        title: "Sale Price"
                    },
                    {
                        field: "FullName",
                        title: "By"
                    }
                    @*{
                        template: "<img style='cursor:pointer;' src='@Url.Content("~/images/delete.png")' id='#: Id #'  class='deleteBlog' />",
                        width:100
                    }*@
                ]
        });

    });
    
</script>
