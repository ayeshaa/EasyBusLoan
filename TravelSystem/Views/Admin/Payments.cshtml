@{
    ViewData["Title"] = "Payments";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                     
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        <div id="grid"></div>
                    </div>
                </div>
                <!-- /.box -->

            </div>
            <!--/.col (left) -->
    </div>
        <!-- /.row -->
</section>
    <div id="PopupWarning" style="display: none;">
        <table>
            <tr>
                <td>
                    <p>Do you want to delete?</p>
                    <br />
                </td>
            </tr>
            <tr>
                <td style="text-align: center">
                    <button class="k-button k-primary" id="btnYes">Yes</button>
                    <button class="k-button k-primary" id="btnNo">No</button>
                </td>
            </tr>
        </table>
    </div>
    <script type="text/javascript">

    $(document).ready(function () {
     $("#grid").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: "@Url.Action("GetAllPayments", "Admin")"
                    },
                    pageSize: 20
                },
                height: 550,
                sortable: true,
                filterable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                columns: [
                    {
                        field: "Id",
                        title: "#",
                        width:150
                    },
                    {
                        template: "<span class='btn btn-link' >#: VehicleTypeName # </span>",
                    field: "VehicleTypeName",
                        title: "Vehicle Name"
                    },
                    {
                        template: "#= kendo.toString(kendo.parseDate(CreatedDate),  'dd-MMM-yyyy hh:mm tt') #",
                        field: "CreatedDate",
                        title: "Buy Date",
                    },
                    {
                        field: "StripeCustomerId",
                        title: "Stripe Customer"
                    },
                    {
                        field: "SalesPrice",
                        title: "Sale Price"
                    },
                    {
                        field: "FullName",
                        title: "By"
                    }
                    @*{
                        template: "<img style='cursor:pointer;' src='@Url.Content("~/images/delete.png")' id='#: Id #'  class='deleteBlog' />",
                        width:100
                    }*@
                ]
        });

    });

    </script>