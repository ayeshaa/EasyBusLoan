            ]
        });
    });
</script>
<form method="post" action="@Url.Action("SaveBlog","Admin")">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <h3 class="card-header-text">Blog Detail</h3>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                                <button type="button" class="btn btn-danger" id="btnBack" data-placement="left" data-toggle="tooltip" title="Back"><i class="fa fa-reply btn-icon"></i></button>
                                <button type="submit" class="btn btn-success" id="btnSave" data-placement="left" data-toggle="tooltip" title="Save"><i class="fa fa-save btn-icon"></i></button>

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.HiddenFor(m => m.Id)
                                <div class="form-group">
                                    <label>Title</label>
                                    @Html.TextBoxFor(m => m.Title, new { @class = " k-textbox", @style = "width:100%", @placeholder = "Title" })
                                <span class="text-danger">@Html.ValidationMessageFor(o=>o.Title,"")</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Categories</label>
                                    <select id="categories"></select>
                                    <span class="text-danger">@Html.ValidationMessageFor(o => o.CategoryIds, "")</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea id="editor" name="Body" rows="10" cols="30" style="height:440px" aria-label="editor">
@Html.Raw(Model.Body)
    </textarea>
                                    <script>
                                        $(document).ready(function () {
                                            // create Editor from textarea HTML element with default set of tools
                                            $("#editor").kendoEditor({
                                                encoded: false,
                                                resizable: {
                                                    content: true,
                                                    toolbar: true
                                                }
                                            });
                                        });
                                    </script>
                                </div>
                            </div>
                           <input type="hidden" id="blogCat"  name="CategoryIds"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $("#blogCat").val('@Model.CategoryIds');
        var multiselect = $("#categories").data("kendoMultiSelect");
        var selectedData = [];
        var value = multiselect.value();
        multiselect.value([@Model.CategoryIds]);

    });
</script>
<script>
    function onSelect(e) {
        
        var dataItem = e.dataItem;
      var multiselect = $("#categories").data("kendoMultiSelect");
        var selectedData = [];
        var value = multiselect.value();
        var selectedCategories = value;
        selectedCategories.push(dataItem.Id);
        $("#blogCat").val(selectedCategories.join(","));
        
    };
    $(document).ready(function () {
        $("#btnBack").click(function () {
            window.location.href = "@Url.Action("Blogs","Admin")";
        });
    });
</script>